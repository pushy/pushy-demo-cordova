<?xml version='1.0' encoding='utf-8'?>

<widget id="me.pushy.example" ios-CFBundleIdentifier="me.pushy.demo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>PushyDemo</name>
    <description>A demo of the Pushy SDK integrated into a sample Cordova app.</description>
    <author email="support@pushy.me" href="https://pushy.me">Pushy</author>

    <content src="index.html" />

    <preference name="ShowTitle" value="true" />
    <preference name="Orientation" value="portrait" />

    <platform name="android">
        <icon src="assets/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="assets/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="assets/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="assets/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />

        <edit-config file="AndroidManifest.xml" target="/manifest/application/activity[@android:label='@string/activity_name']" mode="merge">
            <activity android:theme="@style/Theme.AppCompat.Light.DarkActionBar"></activity>
        </edit-config>
    </platform>
    
    <platform name="ios">
        <config-file parent="UIUserInterfaceStyle" platform="ios" target="*-Info.plist">
            <string>Light</string>
        </config-file>

        <icon src="assets/ios/Icon-App-20x20@1x.png" width="20" height="20" />
        <icon src="assets/ios/Icon-App-20x20@2x.png" width="40" height="40" />
        <icon src="assets/ios/Icon-App-20x20@3x.png" width="60" height="60" />
        <icon src="assets/ios/Icon-App-29x29@1x.png" width="29" height="29" />
        <icon src="assets/ios/Icon-App-29x29@2x.png" width="58" height="58" />
        <icon src="assets/ios/Icon-App-29x29@3x.png" width="87" height="87" />
        <icon src="assets/ios/Icon-App-40x40@1x.png" width="40" height="40" />
        <icon src="assets/ios/Icon-App-40x40@2x.png" width="80" height="80" />
        <icon src="assets/ios/Icon-App-40x40@3x.png" width="120" height="120" />
        <icon src="assets/ios/Icon-App-57x57@1x.png" width="57" height="57" />
        <icon src="assets/ios/Icon-App-57x57@2x.png" width="114" height="114" />
        <icon src="assets/ios/Icon-App-60x60@2x.png" width="120" height="120" />
        <icon src="assets/ios/Icon-App-60x60@3x.png" width="180" height="180" />
        <icon src="assets/ios/Icon-App-76x76@1x.png" width="76" height="76" />
        <icon src="assets/ios/Icon-App-76x76@2x.png" width="152" height="152" />
        <icon src="assets/ios/Icon-App-83.5x83.5@2x.png" width="167" height="167" />
        <icon src="assets/ios/Icon-App-1024x1024@1.png" width="1024" height="1024" />
    </platform>
</widget>
